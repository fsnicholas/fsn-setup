fin-al2
#!/bin/bash

# Check if keyword is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 <keyword>"
    echo "Example: $0 git"
    exit 1
fi

keyword="$1"

echo "Aliases containing '$keyword':"
echo "=============================="

# Find aliases and format output
alias | grep -E "${keyword}[[:space:]]*=" | while read -r line; do
    # Extract alias name and command
    alias_name="${line%%=*}"
    alias_command="${line#*=}"
    
    # Remove leading ' and trailing ' from command
    alias_command="${alias_command#\'}"
    alias_command="${alias_command%\'}"
    
    # Format and print
    printf "%-15s = %s\n" "$alias_name" "$alias_command"
done


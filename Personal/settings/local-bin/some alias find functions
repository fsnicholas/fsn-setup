#!/bin/bash

# Check if keyword is provided
if [ $# -eq 0 ]; then
    echo "Usage: $0 <keyword>"
    echo "Example: $0 git"
    exit 1
fi

keyword="$1"

echo "Aliases for '$keyword':"
echo "======================="

# Find aliases containing the keyword at the beginning (before =)
alias | grep -E "^[^=]*${keyword}[^=]*=" | while IFS= read -r line; do
    # Split on first = only
    IFS='=' read -r alias_name alias_command <<< "$line"
    
    # Clean up the command (remove surrounding quotes if present)
    alias_command="${alias_command#\'}"
    alias_command="${alias_command%\'}"
    alias_command="${alias_command#\"}"
    alias_command="${alias_command%\"}"
    
    # Print formatted output
    printf "%-12s = %s\n" "$alias_name" "$alias_command"
done


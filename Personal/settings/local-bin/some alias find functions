#!/usr/bin/env bash
# -----------------------------------------------------------------------------
# find-aliases.sh
# -----------------------------------------------------------------------------
# Search and display aliases containing a specific command or keyword.
# Filters out false positives (like ".log" or ".d" suffixes).
#
# Usage:
#   find-aliases.sh <keyword>
# Example:
#   find-aliases.sh pacman
# -----------------------------------------------------------------------------

# --- sanity check ---
if [[ -z "$1" ]]; then
  echo "Usage: $(basename "$0") <keyword>"
  exit 1
fi

keyword="$1"

# --- gather and filter aliases ---
alias | grep -E "${keyword}[[:space:]]"  \
| while IFS='=' read -r name definition; do
    name="${name#alias }"
    definition="${definition#\'}"
    definition="${definition%\'}"
    printf "%-20s = %s\n" "$name" "$definition"
  done


# some alias find functions
fial() { 
    alias | grep -i "$1" | sed "s/^alias //; s/='/ = /; s/'$//" | sort | \
    awk '{
        cmd = ""
        for(i=3;i<=NF;i++) cmd = cmd $i (i==NF ? "" : " ")
        printf "%-15s %-2s %s\n", $1, $2, cmd
    }'
}

=====================

find-aliases-3() {
    if [ $# -eq 0 ]; then
        echo "Usage: find-aliases <keyword>"
        return 1
    fi
    
    echo "Aliases for '$1':"
    echo "================="
    
    # Get aliases and filter
    alias | grep -E ".*$1.*" | while IFS= read -r line; do
        # Remove 'alias ' prefix if present and split on first =
        line="${line#alias }"
        IFS='=' read -r name cmd <<< "$line"
        
        # Remove quotes from command
        cmd="${cmd#\'}"
        cmd="${cmd%\'}"
        cmd="${cmd#\"}"
        cmd="${cmd%\"}"
        
        # Only show if keyword is in alias name (before the =)
        if [[ "$name" =~ $1 ]]; then
            printf "%-15s = %s\n" "$name" "$cmd"
        fi
    done
}

